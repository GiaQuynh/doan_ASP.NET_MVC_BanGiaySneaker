@model IEnumerable<Nhom9_WebsiteGiaySneaker.Models.SanPham>

@{
    ViewBag.Title = "SanPhamPartial";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">New Shoes Arrival</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                    <div class="product d-flex flex-column">

                        <a href="#" class="img-prod">
                            <img class="img-fluid" style="height:250px" src="@Url.Content("/Assets/AnhSP/"+item.AnhSP)" alt="Colorlib Template" />
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3">
                            <div class="d-flex">
                                <div class="cat">
                                    <span>Lifestyle</span>
                                </div>
                                <div class="rating">
                                    <p class="text-right mb-0">
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    </p>
                                </div>
                            </div>
                            <h3 title="@item.TenSP"><a href="#">@item.TenSP</a></h3>
                            <div class="pricing">
                                <p class="price" title="@item.GiaBan"><span>@item.GiaBan</span></p>
                            </div>
                            @*<a href="@Url.Action("ChiTietSanPhamView", new { @id=item.MaSP })">Xem chi tiet</a>*@
                            <p class="bottom-area d-flex px-3">
                                <a href="@Url.Action("AddGioHang", "GioHang", new { @ms = item.MaSP, @URL = Request.Url.ToString() })" class="add-to-cart text-center py-2 mr-1">
                                    <span>Add to cart <i class="ion-ios-add ml-1"></i></span>
                                </a>
                                <a href="@Url.Action("ChiTietSanPhamView", new { @id = item.MaSP })" class="buy-now text-center py-2">
                                    Detail<span><i class="ion-ios-cart ml-1"></i></span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</section>
