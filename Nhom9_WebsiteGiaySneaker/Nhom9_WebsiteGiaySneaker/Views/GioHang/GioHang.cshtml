@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutPage4.cshtml";
}

@using Nhom9_WebsiteGiaySneaker.Models;
@model List<GioHang>

<div class="hero-wrap hero-bread" style="background-image: url('/Assets/images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index","Home")">Home</a></span> <span>Cart</span></p>
                <h1 class="mb-0 bread">My Wishlist</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="ftco-animate">
                <div class="cart-list">
                    <table class="table">
                        <thead style="background-color: black; color: white">
                            <tr class="text-center">
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Ảnh Sản Phẩm</th>
                                <th>Số Lượng</th>
                                <th>Đơn Giá</th>
                                <th>Thành Tiền</th>
                                <th>&nbsp;</th>
                                <th style="color: white">@Html.ActionLink("RemoveALL", "ProductRemoveAll", "GioHang")</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.iMaSP</td>
                                    <td class="product-name">@item.iTenSP</td>
                                    <td class="image-prod"><img src="/Assets/AnhSP/@item.iAnhSP" width="100%"></td>
                                    @using (Html.BeginForm("ProductUpdate", "GioHang", new { MASP = item.iMaSP }))
                                    {

                                        @*<td width="12%">@item.iSoLuong</td>*@
                                        <td width="20%"><input class="text-center" type="number" name="txtsoluong" value="@item.iSoLuong"></td>
                                        <td width="50%">@string.Format("{0:0,0}", item.iGiaBan)</td>
                                        <td width="50%">@string.Format("{0:0,0}", item.iThanhTien)</td>
                                        <td><a href="@Url.Action("ChiTietSanPhamView", "SanPham", new { @id = item.iMaSP})">Details</a></td>
                                        <td><a href="@Url.Action("ProductRemove","GioHang", new { @maSP = item.iMaSP})">Remove</a></td>
                                        <td><input class="btn btn-primary" type="submit" value="Update"></td>
                                    }
                                </tr>
                            }
                            <tr style="background-color: ButtonShadow">
                                <td colspan="3" style="color:black;font-weight:bold;text-align:right;">Tổng cộng: </td>
                                <td style="color:red; font-weight:bold;">@ViewBag.TongSoLuong</td>
                                <td>&nbsp;</td>
                                <td style="color:red;font-weight:bold;">@string.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td><a href="@Url.Action("Checkout", "GioHang")"><input class="btn btn-dark" type="submit" value="Đặt Hàng"></a></td>
                                <td>&nbsp;</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
