@model IEnumerable<Nhom9_WebsiteGiaySneaker.Models.NhanVien>

@{
    ViewBag.Title = "KẾT QUẢ TÌM KIẾM";
}

@functions{
    public static string Truncate(string value, int maxLength)
    {
        if (string.IsNullOrEmpty(value)) return value;
        return value.Length <= maxLength ? value : value.Substring(0, maxLength) + "...";
    }
}

<div class="d-flex flex-row align-items-center flex-wrap">
    <form class="form-inline" action="@Url.Action("NhanVien", "Account_Admin")" method="get">
        <div class="form-group mx-2 my-1">
            <label for="search">Search</label>
            <input type="search"
                   class="form-control"
                   id="search"
                   name="search"
                   value="@ViewBag.Search"
                   placeholder="Search" />
        </div>
        <button type="submit" class="btn btn-primary mx-2">GO</button>
    </form>
</div>

<p>
    @Html.ActionLink("Tạo nhân viên mới", "TaoNhanVien", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Điện thoại</th>
            <th>Tài khoản</th>
            <th>Mật khẩu</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Chức vụ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.HoTenNV)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinhNV)</td>
                <td>@Html.DisplayFor(modelItem => item.GioiTinhNV)</td>
                <td>@Html.DisplayFor(modelItem => item.DienThoaiNV)</td>
                <td>@Html.DisplayFor(modelItem => item.TaiKhoanNV)</td>
                <td>@Html.DisplayFor(modelItem => item.MatKhauNV)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailNV)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChiNV)</td>
                <td>@Html.DisplayFor(modelItem => item.ChucVuNC)</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "SuaNhanVien", new { id = item.MaNV }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Chi tiết", "ChiTietNhanVien", new { id = item.MaNV }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Xóa", "XoaNhanVien", new { id = item.MaNV }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>