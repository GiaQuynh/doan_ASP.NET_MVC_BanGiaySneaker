@model Nhom9_WebsiteGiaySneaker.Models.KhachHang

@{
    ViewBag.Title = "ChiTietKhachHang";
}

<h2>Chi tiết khách hàng</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin khách hàng</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>

            <dt class="col-sm-3">Ngày sinh</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NgaySinh)</dd>

            <dt class="col-sm-3">Giới tính</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.GioiTinh)</dd>

            <dt class="col-sm-3">Điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DienThoai)</dd>

            <dt class="col-sm-3">Tài khoản</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TaiKhoan)</dd>

            <dt class="col-sm-3">Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MatKhau)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>
        </dl>
    </div>
</div>

<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaKH }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Quay lại danh sách", "Customers", new { }, new { @class = "btn btn-secondary" })
</p>